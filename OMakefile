USE_OCAMLFIND = true
BYTE_ENABLED = true
OCAMLDEP_MODULES_ENABLED = false

OCAMLPACKS = atdgen unix
OCAMLFLAGS = -annot -g

FILES[] =
  snd_wav
  snd_gen
  lazylist
  tristate
  picker
  seq_t
  seq_j
  seq
  timer
  vote
  loop

Atdgen(seq, $(EMPTY))
OCamlLibrary(action, $(FILES))
OCamlProgram(randomtask, $(FILES) main)

.DEFAULT: action.cma action.cmxa randomtask.opt

.PHONY: clean
clean:
        rm -f *.o *.a *.cm* *~ *.annot *.run *.opt $(ATDGEN_OUTFILES)
